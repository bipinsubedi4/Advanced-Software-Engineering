datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("CUSTOMER") // CUSTOMER | PROVIDER | ADMIN
  createdAt    DateTime @default(now())
  bookings     Booking[]
}



model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  durationMin Int
  priceCents  Int
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  serviceId Int
  startTime DateTime
  endTime   DateTime
  address   String
  status    String   @default("PENDING")
  user      User     @relation(fields: [userId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}

